    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/dist/index.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npx",
            "port": 9865,
            "args": [
                "--node-arg=--inspect-brk=9865",
                "run-test"
            ],
            "outputCapture": "std"
        }
    ]
}
